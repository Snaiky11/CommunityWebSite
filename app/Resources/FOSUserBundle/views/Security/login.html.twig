{% extends "FOSUserBundle::layout.html.twig" %}

{% block fos_user_content %}
{% if error %}
    <div>{{ error|trans({}, 'FOSUserBundle') }}</div>
{% endif %}
<form action="{{ path("fos_user_security_check") }}" method="post">
    <div class="container-fluid bg-light">
        <div class="col-md-offset-5 col-md-2">
            <div class="form-group">
            <br action="{{ path("fos_user_security_check") }}" method="post">
                <input class="form-control" type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                <label for="username">{{ 'username'|trans({}, 'FOSUserBundle') }}</label>
                <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" />

            </br>
                <label for="password">{{ 'password'|trans({}, 'FOSUserBundle') }}</label>
                <input class="form-control" type="password" id="password" name="_password" required="required" />
            </br>
                <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                <label for="remember_me">{{ 'remember_me'|trans({}, 'FOSUserBundle') }}</label>
            </br>
                <input class="btn btn-primary" type="submit" id="_submit" name="_submit" value="{{ 'submit'|trans({}, 'FOSUserBundle') }}" />
            </div>
        </div>
    </div>
</form>
{% endblock fos_user_content %}
