{% extends "FOSUserBundle::layout.html.twig" %}

{% block fos_user_content %}


{% if error %}
        <div>{{ error|trans({}, 'FOSUserBundle') }}</div>
{% endif %}
    <div class="container">
        <h2>Connexion</h2>
        <div class="light_spacer col-md-12"></div>
            <div class="col-md-9">
                <br /><br /><br />
                <p>Vous n'avez pas de compte ? Venez rejoindre notre communaute !</p>
                <a href="{{ path('fos_user_registration_register') }}"><button class="btn btn-danger col-md-2">S'inscrire</button></a>
            </div>
            <div class="col-md-3">
                <form action="{{ path("fos_user_security_check") }}" method="post">
                        <div class="form-group">
                        <br action="{{ path("fos_user_security_check") }}" method="post" />
                            <input class="form-control" type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                            <label for="username">{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}</label>
                            <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" />

                        <br />
                            <label for="password">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label>
                            <input class="form-control" type="password" id="password" name="_password" required="required" />
                        <br />
                            <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                            <label for="remember_me">{{ 'Se souvenir de moi'|trans({}, 'FOSUserBundle') }}</label>
                        <br />
                            <input class="btn btn-danger col-md-6" type="submit" id="_submit" name="_submit" value="{{ 'Connexion'|trans({}, 'FOSUserBundle') }}" />
                        </div>
                    <br /><br />
                    <div>
                        <a href="{{ path("fos_user_resetting_request") }}">Mot de passe oublie ?</a>
                    </div>
                    <br /><br />
                </form>
            </div>
        <div class="light_spacer col-md-12"></div>
    </div>
{% endblock fos_user_content %}
